global:
  resolve_timeout: 5m

route:
  receiver: 'default'
  group_by: ['alertname']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 1h
  routes:
    - match:
        severity: critical
      receiver: 'discord'
    - match:
        severity: warning
      receiver: 'ntfy'
    - match:
        severity: info
      receiver: 'ntfy'

receivers:
  - name: 'default'
    webhook_configs:
      - url: "${NTFY_URL}"

  - name: 'ntfy'
    webhook_configs:
      - url: "${NTFY_URL}"

  - name: 'discord'
    webhook_configs:
      - url: "${DISCORD_WEBHOOK_URL}"
        send_resolved: true
