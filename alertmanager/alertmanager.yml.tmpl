global:
  resolve_timeout: 5m

route:
  receiver: 'default'
  group_by: ['alertname']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 1h
  routes:
    - match:
        severity: critical
      receiver: 'discord'
    - match:
        severity: warning
      receiver: 'ntfy'
    - match:
        severity: info
      receiver: 'ntfy'

receivers:
  - name: 'default'
    webhook_configs:
      - url: "${NTFY_URL}"
        send_resolved: true
        http_config:
          headers:
            Content-Type: text/plain
        body: |
          {{ range .Alerts }}
          🔔 *{{ .Labels.alertname }}* - {{ .Annotations.summary }}
          📍 Instance: {{ .Labels.instance }}
          💬 {{ .Annotations.description }}
          🔖 Severity: {{ .Labels.severity }}
          ⏱️ Starts at: {{ .StartsAt }}
          {{ end }}

  - name: 'ntfy'
    webhook_configs:
      - url: "${NTFY_URL}"
        send_resolved: true
        http_config:
          headers:
            Content-Type: text/plain
        body: |
          {{ range .Alerts }}
          🔔 *{{ .Labels.alertname }}* - {{ .Annotations.summary }}
          📍 Instance: {{ .Labels.instance }}
          💬 {{ .Annotations.description }}
          🔖 Severity: {{ .Labels.severity }}
          ⏱️ Starts at: {{ .StartsAt }}
          {{ end }}

  - name: 'discord'
    webhook_configs:
      - url: "${DISCORD_WEBHOOK_URL}"
        send_resolved: true
        http_config:
          headers:
            Content-Type: application/json
        body: |
          {
            "content": "{{ range .Alerts }}🔥 **{{ .Labels.alertname }}** on {{ .Labels.instance }}: {{ .Annotations.summary }} - {{ .Annotations.description }} ({{ .Labels.severity }})\n{{ end }}"
          }
